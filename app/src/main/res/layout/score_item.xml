<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/score_item_layout_total"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/score_item_layout_jornada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/score_jornada_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="@string/round"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_over_background"
            android:textStyle="bold"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/score_item_layout_datos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/score_item_layout_points"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/score_item_layout_points_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/score_points_round_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="15dp"
                    android:text="@string/points_round"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_over_background"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/score_points_round_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/score_points_round_label"
                    android:layout_toRightOf="@+id/score_points_round_label"
                    android:paddingRight="10dp"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_over_background"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/score_item_layout_points_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/score_points_general_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="15dp"
                    android:text="@string/points_general"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_over_background"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/score_points_general_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/score_points_general_label"
                    android:layout_toRightOf="@+id/score_points_general_label"
                    android:paddingRight="10dp"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_over_background"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/score_item_layout_ranking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/score_item_layout_ranking_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/score_ranking_round_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="@string/ranking_round"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_over_background"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/score_ranking_round_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/score_ranking_round_label"
                    android:paddingRight="15dp"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_toRightOf="@+id/score_ranking_round_label"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_over_background"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/score_item_layout_ranking_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/score_ranking_general_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="@string/ranking_general"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_over_background"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/score_ranking_general_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/score_ranking_general_label"
                    android:paddingRight="15dp"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_toRightOf="@+id/score_ranking_general_label"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text_over_background"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>